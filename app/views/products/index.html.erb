<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h1 class="text-centerx">Productos</h1>
			<% if signed_in? %>
				<div class="text-right">
					<%= link_to "Crear Producto", new_product_path, class: "btn btn-primary" %>
				</div>
			<% end %>
			
			<table class="table">
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>URL</th>
					<th>Description</th>
					<th></th>
					<th></th>
				</tr>
				<% @products.each do |thing| %>
					<tr>
						<td><%= thing.id %></td>
						<td><%= link_to thing.name, thing %></td>
						<td><%= thing.url %></td>
						<td><%= thing.description %></td>
						<% if signed_in? %>
							<td>
								<%= link_to "Edit", edit_product_path(thing), class: "btn btn-warning btn-xs" %>
								<%= link_to "Delete", thing, method: :delete, data:{ confirm: "Seguro deseas elminar este producto?"}, class: "btn btn-danger btn-xs" %>
							</td>
						<% end %>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>


